<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_corner_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/sellFragItemDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25/03/2023"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/sellFragItemImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/background_image"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sellFragItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/sellFragItemUnitPrice"
                android:text="25 000 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/unit_price"
                android:textStyle="bold"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sellFragItemQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/sellFragItemUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="loc"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/sellFragItemTotalPrice"
                android:text="75 000 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/total_price"
                android:textStyle="bold"
                android:textSize="13sp"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:gravity="center_vertical"
            android:id="@+id/btnSellFragItemEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="0dp"
            app:icon="@drawable/ic_edit"
            android:padding="0dp"
            app:iconPadding="0dp"
            app:iconTint="@color/grey_corner"
            android:background="@android:color/transparent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSellFragItemDelete"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="0dp"
            app:icon="@drawable/ic_delete"
            android:padding="0dp"
            app:iconPadding="0dp"
            app:iconTint="@color/grey_corner"
            android:background="@android:color/transparent"/>



    </LinearLayout>
</LinearLayout>
