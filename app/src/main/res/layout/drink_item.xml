<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_corner_16"
    android:orientation="horizontal"
    android:layout_margin="16dp">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/drinkItemImage"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/background_image"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/drinkItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drink name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/drinkItemUnit"
            android:text="Unit: Can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:gravity="center_vertical"
        android:id="@+id/btnDrinkItemEdit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="0dp"
        app:icon="@drawable/ic_edit"
        android:padding="0dp"
        app:iconPadding="0dp"
        app:iconTint="@color/grey_corner"
        android:background="@android:color/transparent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDrinkItemDelete"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="0dp"
        app:icon="@drawable/ic_delete"
        android:padding="0dp"
        app:iconPadding="0dp"
        app:iconTint="@color/grey_corner"
        android:background="@android:color/transparent"/>



</LinearLayout>